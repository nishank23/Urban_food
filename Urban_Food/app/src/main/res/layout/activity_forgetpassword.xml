<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.ForgetPasswordScreen.Forgetpassword">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/avenir_black"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/forgot_password"
        android:textColor="@color/titleblue"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_forgetpassword_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_book"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/forgot_password_text"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/tv_forgetpassword"
        app:layout_constraintStart_toStartOf="@id/tv_forgetpassword"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgetpassword" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_forgetemail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_edit_text"
        android:fontFamily="@font/avenir_book"
        android:hint="@string/your_email"
        android:includeFontPadding="true"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"

        app:layout_constraintEnd_toEndOf="@id/tv_forgetpassword"
        app:layout_constraintStart_toStartOf="@id/tv_forgetpassword"
        app:layout_constraintTop_toBottomOf="@id/tv_forgetpassword_content" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/avenir_heavy"
        android:text="@string/send"
        android:textSize="17sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@id/tv_forgetpassword"
        app:layout_constraintStart_toStartOf="@id/tv_forgetpassword"

        app:layout_constraintTop_toBottomOf="@id/et_forgetemail" />

</androidx.constraintlayout.widget.ConstraintLayout>