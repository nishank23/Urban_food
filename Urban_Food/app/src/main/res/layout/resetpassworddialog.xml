<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/iv_password_reset"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_lock_overturning"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
<com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_password_reset"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your password has\n been reset"
    android:fontFamily="@font/avenir_black"
    android:textSize="25sp"
    android:textColor="@color/titleblue"
    android:gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/iv_password_reset"
    />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_pwdreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_reset"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/tv_receivepassword"
        android:fontFamily="@font/avenir_book"
        android:textSize="17sp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/avenir_heavy"
        android:text="Done"
        android:textSize="17sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@id/tv_password_reset"
        app:layout_constraintStart_toStartOf="@id/tv_password_reset"

        app:layout_constraintTop_toBottomOf="@id/tv_pwdreset" />

</androidx.constraintlayout.widget.ConstraintLayout>